<Window x:Class="WakeOnLanSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WakeOnLanSample"
        mc:Ignorable="d"
        Title="Wake On Lan" Height="211" Width="295">
    <Grid>
        <StackPanel Margin="30,30,30,30">
            <StackPanel Orientation="Horizontal">
                <Label Content="MAC" HorizontalAlignment="Left"  VerticalAlignment="Top"/>
                <TextBox x:Name="textBoxMac" Width="162" Margin="10,0,0,0" Text="00:00:00:00:00:00" FontSize="16"/>
            </StackPanel>
            <Button Width="150" Height="33"  Margin="0,30,0,0" Content="Send Magic Packet" Click="Button_Click"/>
        </StackPanel>



    </Grid>
</Window>
